<div class="container">
  <div class="row">
    <div class="col-s-12">
      <div class="d-flex justify-content-center">
        <form class="d-flex flex-column align-items-center" method="POST" action="/newtrip/category/edit/{{diagram.id}}"
          id="createCategoryForm">
          <p id="newtripTitle" class="useraccount giveitaname">Edit diagram "{{diagram.name}}" here:</p> <br />

          {{#if error}}

          <p class="text-danger">{{error}}</p>

          {{/if}}

          <br />
          <div class="form-group">
            <input type="text" placeholder="Name your diagram" name="diagramName" class="form-control" id="categoryName"
              value="{{diagram.name}}">
          </div> <br />
          <div class="form-group">
            <input type="text" placeholder="Enter labels" name="diagramLabels" class="form-control"
              id="newCategoryCost">
          </div> <br />
          <div class="form-group">
            <input type="text" placeholder="Enter diagram data" name="diagramData" class="form-control" id="payers"
              value="{{diagram.data}}">
          </div> <br>
          <button id="createNewtripBtn" type="submit"
            class="btn btn-primary waves-effect waves-light btn-large nav-wrapper green lighten-3">Save changes</button>
        </form> <br>
      </div>
    </div>
  </div>
</div>
