<div class="container">
  <div class="row">

    <div class="col-s-12">


      <div class="d-flex justify-content-center">

        <form class="d-flex flex-column align-items-center" method="POST" action="/newtrip/doughnut" id="newtripForm">
          <h3>
            <p id="newtripTitle" class="useraccount giveitaname">You create a diagram, enter labels and data here:</p>
          </h3>

          {{#if error}}
          <p class="text-danger">{{error}}</p>
          {{/if}}

          <div class="form-group">
            <input type="text" placeholder="Enter diagram name" name="diagramName" class="form-control"
              id="newtripName">
          </div> <br />
          <div class="form-group">
            <input type="text" placeholder="Enter diagram labels" name="diagramLabels" class="form-control"
              id="newtripName">
          </div> <br />
          <div class="form-group">
            <input type="text" placeholder="Enter diagram data" name="diagramData" class="form-control"
              id="newTripFullCost">
          </div> <br />
          <button id="createNewtripBtn" type="submit"
            class="btn btn-primary waves-effect waves-light btn-large nav-wrapper green lighten-3">Create
            diagram</button>
        </form>

      </div>

    </div>
  </div>

</div>
